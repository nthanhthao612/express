extends ../public/layout/homepage.layout.pug
block content
    h1 register page
    if error 
        each err in error
            .alert.alert-danger= err
    form(action="", method="POST",enctype="multipart/form-data") 
        label(for="username") Username
        input(type="text", name="username", id="username",value = values ? values.username:"")
        br 
        br
        label(for="password") Password
        input(type="password", name="password", id="password" value= values ? values.password: "")
        br
        input(type="file", name="avatar")
        br
        button(type="submit", class="btn btn-primary") register